    <div class="context-menu-item" onclick="openWindow('about')">Open</div>
    <div class="context-menu-item" onclick="showNotification('Properties', 'Window properties would go here!')">Properties</div>
    <div class="context-menu-item" onclick="showNotification('Create Shortcut', 'Shortcut created on desktop!')">Create Shortcut</div>
  </div>

  <!-- Notification -->
  <div class="notification" id="notification">
    <div id="notification-content"></div>
  </div>

  <!-- Taskbar -->
  <div class="taskbar">
    <button class="start-button" onclick="showNotification('Start Menu', 'Start menu would appear here!')">Start</button>
    <div class="taskbar-item" onclick="focusWindow('about')">About Pulse COOP</div>
    <div class="taskbar-item" onclick="showNotification('My Computer', 'My Computer would open here!')">My Computer</div>
    <div class="taskbar-item" onclick="showNotification('Internet Explorer', 'Internet Explorer would launch here!')">Internet Explorer</div>
    <div class="clock" id="clock">12:00 PM</div>
  </div>

  <script>
    // Global functions accessible to onclick handlers
    (window as any).goHome = function() {
      // Show a notification before going home
      if ((window as any).showNotification) {
        (window as any).showNotification('Going Home', 'Returning to the main page...');
      }
      
      // Navigate to home page after a short delay
      setTimeout(() => {
        window.location.href = '/';
      }, 1000);
    };

    let activeWindow = 'about';
    let windowStates = {};
    let isMobile = window.innerWidth <= 768;

    // Update clock
    function updateClock() {
      const now = new Date();
      const timeString = now.toLocaleTimeString('en-US', { 
        hour: 'numeric', 
        minute: '2-digit',
        hour12: true 
      });
      const clockElement = document.getElementById('clock');
      if (clockElement) {
        clockElement.textContent = timeString;
      }
    }
    
    setInterval(updateClock, 1000);
    updateClock();

    // Window management functions are now global

    function updateTaskbar() {
      document.querySelectorAll('.taskbar-item').forEach(item => {
        item.classList.remove('active');
      });
      
      const activeItem = document.querySelector(`[onclick*="${activeWindow}"]`);
      if (activeItem) {
        activeItem.classList.add('active');
      }
    }

    // Make functions globally accessible
    (window as any).showNotification = function(title: string, message: string) {
      const notification = document.getElementById('notification');
      const content = document.getElementById('notification-content');
      
      if (notification && content) {
        content.innerHTML = `<strong>${title}</strong><br>${message}`;
        notification.classList.add('show');
        
        setTimeout(() => {
          notification.classList.remove('show');
        }, 3000);
      }
    };

    (window as any).openWindow = function(type: string) {
      // Hide all windows
      document.querySelectorAll('.window-container').forEach(win => {
        (win as HTMLElement).style.display = 'none';
      });
      
      // Show the requested window
      const windowElement = document.getElementById(`${type}-window`);
      if (windowElement) {
        windowElement.style.display = 'block';
        activeWindow = type;
        updateTaskbar();
      }
    };

    (window as any).focusWindow = function(type: string) {
      (window as any).openWindow(type);
    };

    // Context menu
    document.addEventListener('contextmenu', function(e) {
      e.preventDefault();
      const contextMenu = document.getElementById('context-menu');
      if (contextMenu) {
        contextMenu.style.display = 'block';
        contextMenu.style.left = e.pageX + 'px';
        contextMenu.style.top = e.pageY + 'px';
      }
    });

    document.addEventListener('click', function() {
      const contextMenu = document.getElementById('context-menu');
      if (contextMenu) {
        contextMenu.style.display = 'none';
      }
    });

    // Desktop icon selection
    document.addEventListener('click', function(e) {
      const target = e.target as HTMLElement;
      if (target && target.closest('.desktop-icon')) {
        document.querySelectorAll('.desktop-icon').forEach(icon => {
          icon.classList.remove('selected');
        });
        const iconElement = target.closest('.desktop-icon') as HTMLElement;
        if (iconElement) {
          iconElement.classList.add('selected');
        }
      } else {
        document.querySelectorAll('.desktop-icon').forEach(icon => {
          icon.classList.remove('selected');
        });
      }
    });

    // Touch-friendly interactions
    if ('ontouchstart' in window) {
      // Add touch event listeners for mobile
      document.addEventListener('touchstart', function(e) {
        const target = e.target as HTMLElement;
        if (target && target.closest('.desktop-icon')) {
          // Add visual feedback for touch
          target.closest('.desktop-icon')?.classList.add('selected');
        }
      });

      document.addEventListener('touchend', function(e) {
        const target = e.target as HTMLElement;
        if (target && target.closest('.desktop-icon')) {
          // Remove selection after touch
          setTimeout(() => {
            target.closest('.desktop-icon')?.classList.remove('selected');
          }, 200);
        }
      });
    }

    // Make windows draggable (desktop only)
    if (!isMobile) {
      document.addEventListener('DOMContentLoaded', function() {
        const windows = document.querySelectorAll('.retro-windows-gui');
        
        windows.forEach((window: Element) => {
          const header = window.querySelector('.retro-windows-gui-header');
          if (!header) return;
          
          let isDragging = false;
          let currentX: number = 0;
          let currentY: number = 0;
          let initialX: number = 0;
          let initialY: number = 0;
          let xOffset: number = 0;
          let yOffset: number = 0;

          header.addEventListener('mousedown', dragStart as EventListener);
          document.addEventListener('mousemove', drag as EventListener);
          document.addEventListener('mouseup', dragEnd as EventListener);

          function dragStart(e: MouseEvent) {
            initialX = e.clientX - xOffset;
            initialY = e.clientY - yOffset;
            if (e.target === header) {
              isDragging = true;
            }
          }

          function drag(e: MouseEvent) {
            if (isDragging) {
              e.preventDefault();
              currentX = e.clientX - initialX;
              currentY = e.clientY - initialY;
              xOffset = currentX;
              yOffset = currentY;
              setTranslate(currentX, currentY, window);
            }
          }

          function setTranslate(xPos: number, yPos: number, el: Element) {
            const htmlEl = el as HTMLElement;
            if (htmlEl && htmlEl.style) {
              htmlEl.style.transform = `translate3d(${xPos}px, ${yPos}px, 0)`;
            }
          }

          function dragEnd(e: MouseEvent) {
            initialX = currentX;
            initialY = currentY;
            isDragging = false;
          }
        });
      });
    }

    // Handle window resize
    window.addEventListener('resize', function() {
      const wasMobile = isMobile;
      isMobile = window.innerWidth <= 768;
      
      // If switching between mobile and desktop
      if (wasMobile !== isMobile) {
        // Refresh the page or adjust layout
        location.reload();
      }
    });

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
      (window as any).openWindow('about');
      
      // Add keyboard navigation for accessibility
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          // Close context menu or notifications
          const contextMenu = document.getElementById('context-menu');
          if (contextMenu && contextMenu.style.display === 'block') {
            contextMenu.style.display = 'none';
          }
        }
      });
    });
  </script>
</body>
</html>


